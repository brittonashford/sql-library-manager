extends layout 

block content
    h1 title
    form(method="post" action="/books/" + book.id)
        include validation-errors.pug
        p
            label(for="title") Title
            input#title(name="title" type="text" value=book.title)
        p
            label(for="author") Author
            input#author(name="author" type="text" value=book.author)
        p
            label(for="genre") Genre
            input#genre(name="genre" type="text" value=book.genre)
        p
            label(for="year") Year
            input#year(name="year" type="text" value=book.year)
        p
            input.button(type='submit' value='Update Book')
    form(method="post" action="/books/" + book.id + "/delete" onsubmit="return confirm('Are you sure you want to delete this book?');")
        p
            a.button(href="/") Cancel
        p
            input.button(type="submit" value="Delete Book")